<% provide(:title, 'About Us') %>
<h1>About Us</h1>
<p>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Οι δημοσιεύσεις μου</h3>
      <%= render 'shared/feed' %>
    </div>
  </div> 
<% else %>
	<span ><%= @micropost=User.last.microposts.first.content %></span>
	<% if @feed_items.any? %>
  		<ol class="microposts">
   	 	<%= render partial: 'shared/feed_item', collection: @feed_items %>
  		</ol>
  		<%= will_paginate @feed_items %>
	<% end %>
   
<% end %> 
</p>